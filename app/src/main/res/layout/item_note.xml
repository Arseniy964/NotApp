<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="24dp"
    android:layout_marginVertical="8dp"
    android:background="@drawable/bg_item_yellow"
    android:padding="12dp">

    <TextView
        android:id="@+id/txt_title_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#252525"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Планы на жизнь: " />

    <TextView
        android:id="@+id/txt_text_note"
        android:layout_width="14dp"
        android:layout_height="12dp"
        android:layout_marginTop="2dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#252525"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_title_note"
        tools:text="text" />

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="#252525"
        android:textSize="8sp"
        app:layout_constraintTop_toBottomOf="@id/txt_text_note"
        tools:text="31 july" />

    <TextView
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="#252525"
        android:textSize="8sp"
        app:layout_constraintStart_toEndOf="@id/txt_date"
        app:layout_constraintTop_toBottomOf="@id/txt_text_note"
        tools:text="12:25" />
</androidx.constraintlayout.widget.ConstraintLayout>